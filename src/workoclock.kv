#:kivy 2.1.0
#:include kv/new_preset_screen.kv
#:include kv/pick_preset_screen.kv
#:include kv/manage_preset_screen.kv
#:include kv/stats_screen.kv

<MainMenuScreen>:
    Label:
        text: "[b][color=ffdc33]Work o'clock![/color][/b]"
        markup: True
        font_size: '24sp'
        halign: 'center'
        valign: 'bottom'
        pos_hint: {'center_y': 0.9}

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: [0.3, 0.4]
        Button:
            text: 'new'
            on_press: root.manager.current = 'new'
        Button:
            text: 'pick'
            on_press: root.manager.current = 'pick'
        Button:
            text: 'manage'
            on_press: root.manager.current = 'manage'
        Button:
            text: 'stats'
            on_press: root.manager.current = 'stats'
