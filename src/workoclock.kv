#:kivy 2.1.0

<MainMenuScreen>:
    Label:
        text: "[b][color=ffdc33]Work o'clock![/color][/b]"
        markup: True
        font_size: '24sp'
        halign: 'center'
        valign: 'bottom'
        pos_hint: {'center_y': 0.9}

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: [0.3, 0.4]
        Button:
            text: 'new'
            on_press: root.manager.current = 'new'
        Button:
            text: 'pick'
            on_press: root.manager.current = 'pick'
        Button:
            text: 'manage'
            on_press: root.manager.current = 'manage'
        Button:
            text: 'stats'
            on_press: root.manager.current = 'stats'

<NewPresetScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "[b][color=ffdc33]Create new preset[/color][/b]"
            markup: True
            font_size: '24sp'
            halign: 'center'
            valign: 'bottom'
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint: [0.67, 0.05]
            Label:
                text: "[b][color=19ff19]Name:[/color][/b]"
                markup: True
                font_size: '20sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.4
            TextInput:
                id: name_input
                text: 'JUST-DO-IT'
                multiline: False
                font_size: '20sp'
        Label:
            text: "[u][b][color=ffdc33]App categories[/color][/b][/u]"
            markup: True
            font_size: '20sp'
            halign: 'center'
            valign: 'center'
            size_hint: [0.5, 0.1]
        GridLayout:
            cols: 2
            size_hint: [0.5, 0.3]

            Label:
                text: "[b][color=19ff19]Messengers[/color][/b]"
                markup: True
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                on_active: root.on_category_checkbox_click(self, self.active)

            Label:
                text: "[b][color=19ff19]Games[/color][/b]"
                markup: True
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                on_active: root.on_category_checkbox_click(self, self.active)

            Label:
                text: "[b][color=19ff19]Video apps[/color][/b]"
                markup: True
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                on_active: root.on_category_checkbox_click(self, self.active)

            Label:
                text: "[b][color=19ff19]Music apps[/color][/b]"
                markup: True
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                on_active: root.on_category_checkbox_click(self, self.active)

            Label:
                text: "[b][color=19ff19]Study apps[/color][/b]"
                markup: True
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                on_active: root.on_category_checkbox_click(self, self.active)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.05
            Label:
                text: "[b][color=ffdc33]Enable autodetector[/color][/b]"
                markup: True
                font_size: '20sp'
                halign: 'right'
                valign: 'center'
                size_hint_x: 0.85
            CheckBox:
                active: True
                on_active: root.on_autodetect_checkbox_click(self, self.active)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint: [0.3, 0.15]
            Button:
                text: 'save'
                on_press: root.on_save()
            Button:
                text: 'back'
                on_press: root.manager.current = 'main'

<PickPresetScreen>:
    BoxLayout:
        size_hint: [0.3, 0.1]
        Button:
            text: 'back'
            on_press: root.manager.current = 'main'

<ManagePresetScreen>:
    BoxLayout:
        size_hint: [0.3, 0.1]
        Button:
            text: 'back'
            on_press: root.manager.current = 'main'

<StatsScreen>:
    BoxLayout:
        size_hint: [0.3, 0.1]
        Button:
            text: 'back'
            on_press: root.manager.current = 'main'
